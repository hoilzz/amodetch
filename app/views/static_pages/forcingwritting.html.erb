<div class="forcing_writting_box" style = "width:1000px">
  <div class = "search_box" style = "width:720px">


    <div class="container-fluid forcingwritting_box">
       <div id="form2">

      <% if current_user.valuations.count < 2%>
        <h3 class = "h_inline">강의 평가</h3>  
          <h2 class = "h_inline"><%=2-current_user.valuations.count%>번
          </h2>
          <h3 class = "h_inline">
            작성하면, 다른 학우의 강의평가를 열람할 수 있어요! 
        </h3>
      <% end %>

        <div class = "dropdown_box">
            <%= render 'static_pages/dropdown_btns_forcing'%>
        </div>

        <div class="search">
          <%if current_page? controller: 'static_pages', action:'forcingwritting' %>     
            <%= form_tag forcingwritting_path, :method => 'get', :class =>'form-inline' do %>
              <%= text_field_tag :search, params[:search], placeholder: :"강의명 또는 교수님 이름을 검색하세요",:class => 'form-control  form-group' ,:style => "width:50%", style: "display:inline;
                                    width:300px;"%>
              <%= submit_tag "찾아줘!", data: { disable_with: "검색 중..." }, :class =>'btn btn-success', :style =>"width:60px;
                                            display:inline;" %>
                  
             <%end%>   
          <%elsif current_page? controller: 'static_pages', action:'home' %>    
            <%= form_tag home_path, :method => 'get', :class =>'form-inline' do %>
              <%= text_field_tag :search, params[:search], placeholder: :"강의명 또는 교수님 이름을 검색하세요",:class => 'form-control  form-group' ,style: "display:inline;
                                    width:300px;"%>
              <%= submit_tag "찾아줘!", data: { disable_with: "검색 중..." }, :class =>'btn btn-success', :style =>"width:60px; display:inline;"%>
             <%end%> 
           <%end%>  
        </div> <!-- search_box -->
      </div> 
    </div>  

    <div class = "search_result_box">
        <div class = "result_table" id="searchtables">
          <%= render 'static_pages/searchtables' %>
        </div>
    </div>

  </div>
</div>


<script>

  function gotowrittingform(lec_num)
  {
    window.location = "/lectures/"+lec_num.toString()+"/writtingform" ;
  }
     //pagination using ajax

  $(function() {
    $("#searchtables").on("click", ".pagination a", function(){
        $.getScript(this.href);
        return false;
      });
  });

  $(function () {
    var autoFont = function () {
        $("h4").css('font-size', Math.max(Math.min($("h4").width() / (300.1 * 10))));
    }
    autoFont();
    $(window).resize(function () {
        autoFont();
    });
  });
</script>

